{#
 Variables provided by custom theme:
 stufen: List of Stufen of this Fachbereich
 
 @see gcmofficial_preprocess_node__fachbereich()
#}


{{ attach_library('gcmofficial/fachbereich') }}
{{ attach_library('gcmofficial/titelbild') }}
<div id="titelbild">
    {{ content.field_titelbild }}
</div>
<div class="aside-container">
    <div>
        {# create menu to switch stufe of unterrichtsfach #}
        <div class="stufen">
            {% if "grundstufe" in stufen %}
            <a class="btn-like" {% if content.field_stufe[0]|render=="Grundstufe" %} id="currentgrade" {% endif %}
                href="/dev/gcmofficial/fach/grundstufe/{{ node.label }}">Grundstufe</a>
            {% endif %}
            {% if "mittelstufe" in stufen %}
            <a class="btn-like" {% if content.field_stufe[0]|render=="Mittelstufe" %} id="currentgrade" {% endif %}
                href="/dev/gcmofficial/fach/mittelstufe/{{ node.label }}">Mittelstufe</a>
            {% endif %}
            {% if "oberstufe" in stufen %}
            <a class="btn-like" {% if content.field_stufe[0]|render=="Oberstufe" %} id="currentgrade" {% endif %}
                href="/dev/gcmofficial/fach/oberstufe/{{ node.label }}">Oberstufe</a>
            {% endif %}
        </div>
        <p><strong>Kontakt:</strong> {{ content.field_kontakt }}</p>
        <p>
            <strong>Hier finden Sie weitere Inhalte:</strong>
        </p>
        <ul>
            {% if content.field_dateien|render %}
            <li><a href="#anchor-dateien">Dateien</a></li>
            {% endif %}
            {% if content.field_schuelerarbeiten|render %}
            <li><a href="#anchor-schuelerarbeiten">Schüler*innenarbeiten</a></li>
            {% endif %}
            {% if content.field_bildergalerie|render %}
            <li><a href="#anchor-bildergalerie">Bildergalerie</a></li>
            {% endif %}
            <li><a href="/dev/gcmofficial/berichte?field_faecher_tag_target_id={{ node.label }}">Aktuelles zum Fachbereich</a>
            </li>
            <li><a href="/dev/gcmofficial/projekte?field_faecher_tag_target_id={{ node.label }}">Projekte</a></li>
        </ul>
        {{ content.body }}
    </div>
    {% if content.field_links|render %}
    <aside>
        {{ content.field_notes }}
        {{ content.field_links }}
    </aside>
    {% endif %}
</div>
<div id="anchor-dateien"></div>
{{ content.field_dateien }}
<div id="anchor-schuelerarbeiten"></div>
{{ content.field_schuelerarbeiten }}
<div id="anchor-bildergalerie"></div>
{{ content.field_bildergalerie }}
